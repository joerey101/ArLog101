generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Enums
enum Rol {
  admin
  empresa
  candidato
}

enum EstadoUsuario {
  activo
  futa_validacion
  suspendido
}

enum Modalidad {
  remoto
  hibrido
  presencial
}

enum EstadoAnuncio {
  activo
  pausado
  cerrado
  borrador
}

enum EstadoPostulacion {
  nuevo
  visto
  entrevista
  finalista
  descartado
  contratado
}

enum TipoEtiqueta {
  hard_skill
  soft_skill
  idioma
  certificacion
  documentacion
}

enum EstadoEtiqueta {
  aprobada
  sugerida
}

enum NivelEtiqueta {
  basico
  intermedio
  avanzado
  experto
}

// Modelos

model Usuario {
  id              Int       @id @default(autoincrement())
  email           String    @unique
  password_hash   String
  rol             Rol
  estado          EstadoUsuario @default(activo)
  fecha_registro  DateTime  @default(now())

  // Relaciones
  perfilEmpresa   PerfilEmpresa?
  perfilCandidato PerfilCandidato?
  anuncios        Anuncio[]
  postulaciones   Postulacion[]
  skills          PerfilEtiqueta[]

  @@map("usuarios")
}

model PerfilEmpresa {
  usuario_id   Int     @id
  razon_social String? @db.VarChar(150)
  cuit         String? @db.VarChar(20)
  industria    String? @db.VarChar(100)
  logo_url     String? @db.VarChar(255)
  sitio_web    String? @db.VarChar(255)
  descripcion  String? @db.Text

  usuario      Usuario @relation(fields: [usuario_id], references: [id], onDelete: Cascade)

  @@map("perfiles_empresas")
}

model PerfilCandidato {
  usuario_id   Int     @id
  nombre       String? @db.VarChar(100)
  apellido     String? @db.VarChar(100)
  telefono     String? @db.VarChar(50)
  ubicacion    String? @db.VarChar(100)
  cv_url       String? @db.VarChar(255)
  linkedin_url String? @db.VarChar(255)

  // Campos adicionales que vi en update_schema
  cuit         String? @db.VarChar(20)
  linkedin     String? @db.VarChar(255) // Posible duplicado legacy, lo mapeo por si acaso

  usuario      Usuario @relation(fields: [usuario_id], references: [id], onDelete: Cascade)

  @@map("perfiles_candidatos")
}

model Etiqueta {
  id      Int            @id @default(autoincrement())
  nombre  String         @unique @db.VarChar(100)
  tipo    TipoEtiqueta   @default(hard_skill)
  estado  EstadoEtiqueta @default(sugerida)

  // Relaciones
  anuncios  AnuncioEtiqueta[]
  usuarios  PerfilEtiqueta[]

  @@map("etiquetas")
}

model Anuncio {
  id             Int       @id @default(autoincrement())
  usuario_id     Int
  titulo         String    @db.VarChar(150)
  descripcion    String?   @db.Text
  departamento   String?   @db.VarChar(100)
  ubicacion      String?   @db.VarChar(100)
  tipo_contrato  String?   @db.VarChar(50)
  modalidad      Modalidad @default(presencial)
  rango_salarial String?   @db.VarChar(100)
  estado         EstadoAnuncio @default(activo)
  fecha_creacion DateTime  @default(now())

  usuario       Usuario @relation(fields: [usuario_id], references: [id], onDelete: Cascade)
  postulaciones Postulacion[]
  etiquetas     AnuncioEtiqueta[]

  @@map("anuncios")
}

model AnuncioEtiqueta {
  anuncio_id      Int
  etiqueta_id     Int
  nivel_requerido NivelEtiqueta @default(intermedio)
  es_excluyente   Boolean       @default(false)

  anuncio  Anuncio  @relation(fields: [anuncio_id], references: [id], onDelete: Cascade)
  etiqueta Etiqueta @relation(fields: [etiqueta_id], references: [id], onDelete: Cascade)

  @@id([anuncio_id, etiqueta_id])
  @@map("anuncio_etiquetas")
}

model PerfilEtiqueta {
  usuario_id  Int
  etiqueta_id Int
  nivel       NivelEtiqueta @default(intermedio)
  validado    Boolean       @default(false)

  usuario  Usuario  @relation(fields: [usuario_id], references: [id], onDelete: Cascade)
  etiqueta Etiqueta @relation(fields: [etiqueta_id], references: [id], onDelete: Cascade)

  @@id([usuario_id, etiqueta_id])
  @@map("perfil_etiquetas")
}

model Postulacion {
  id                Int       @id @default(autoincrement())
  anuncio_id        Int
  usuario_id        Int
  estado            EstadoPostulacion @default(nuevo)
  fecha_postulacion DateTime  @default(now())
  mensaje_candidato String?   @db.Text
  cv_snapshot_url   String?   @db.VarChar(255)
  match_score       Int?      @default(0)

  anuncio Anuncio @relation(fields: [anuncio_id], references: [id], onDelete: Cascade)
  usuario Usuario @relation(fields: [usuario_id], references: [id], onDelete: Cascade)

  @@map("postulaciones")
}
